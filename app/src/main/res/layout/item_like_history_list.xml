<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp">
    <ImageView
        android:id="@+id/item_like_history_fragment_cover_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        />
    <RelativeLayout
        android:id="@+id/item_like_history_fragment_content_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_like_history_fragment_cover_iv"
        >
    <TextView
        android:id="@+id/item_like_history_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/item_like_history_fragment_updatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/item_like_history_fragment_title"
        />
    <TextView
        android:id="@+id/item_like_history_fragment_schedule"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_like_history_fragment_updatetime"
        />
    <TextView
        android:id="@+id/item_like_history_fragment_lasttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_like_history_fragment_schedule"
        />
    </RelativeLayout>
    <View
        android:id="@+id/item_like_history_fragment_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e6e6e6"
        android:layout_toRightOf="@id/item_like_history_fragment_content_rl"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="继续观看"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_toRightOf="@id/item_like_history_fragment_line"
        />


</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e6e6e6"
        />
</LinearLayout>

