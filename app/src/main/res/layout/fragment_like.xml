<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_likeFragment_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF5F5F5"
        android:gravity="center"
        app:tabIndicatorColor="#FFCA1622"
        app:tabSelectedTextColor="#FFCA1622"
        app:tabTextColor="#FF222222"
        app:theme="@style/Widget.Design.TabLayout"
        android:fillViewport="false" />
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_like_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>